name:                hsUrlShort
version:             0.3.1.0
synopsis:            Very simple tiny urlshortener
-- description:         
homepage:            nico-izo.ru
license:             GPL-3
license-file:        LICENSE
author:              Nicolay Izoderov
maintainer:          nico-izo@ya.ru
-- copyright:           
category:            Web
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

executable hsUrlShort
  main-is:             Main.hs
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.3.1,
                       time,
                       http-types,
                       scotty,
                       clay, 
                       text, 
                       blaze-html,
                       blaze-markup,
                       persistent,
                       persistent-template,
                       persistent-sqlite,
                       hamlet,
                       shakespeare,
                       transformers,
                       monad-logger,
                       conduit,
                       resourcet,
                       old-locale
