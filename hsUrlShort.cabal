  type:                exitcode-stdio-1.0
  build-depends:       base >= 4,
                       tasty,
                       tasty-hunit,
                       tasty-quickcheck,
                       tasty-smallcheck
  hs-source-dirs:      test, src
  main-is:             Tasty.hs
  default-language:    Haskell2010
